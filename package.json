{
  "name": "my-memory",
  "version": "1.0.0",
  "description": "Intelligent semantic search across your notes using AI. Supports Apple Notes, Obsidian, local files, and Notion.",
  "main": "dist/main/index.js",
  "homepage": "https://github.com/ShubhenduVaid/my-memory",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShubhenduVaid/my-memory.git"
  },
  "bugs": {
    "url": "https://github.com/ShubhenduVaid/my-memory/issues"
  },
  "keywords": [
    "notes",
    "search",
    "semantic-search",
    "ai",
    "electron",
    "apple-notes",
    "obsidian",
    "notion",
    "gemini",
    "productivity",
    "knowledge-management",
    "desktop-app",
    "macos",
    "windows",
    "linux"
  ],
  "scripts": {
    "build": "tsc && node scripts/bundle-renderer.js && node scripts/copy-renderer-assets.js",
    "start": "npm run build && electron .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "dist": "npm run build && electron-builder",
    "release": "npm run build && electron-builder --publish always",
    "release:mac": "npm run build && electron-builder --mac --publish always",
    "release:win": "npm run build && electron-builder --win --publish always",
    "release:linux": "npm run build && electron-builder --linux --publish always",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "author": "ShubhenduVaid",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^2.2.1",
    "@electron/rebuild": "^3.6.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.19.30",
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^17.2.3",
    "electron-log": "^5.1.2",
    "electron-updater": "^6.1.7",
    "liquid-glass-react": "^1.1.1",
    "pdf-parse": "^1.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-grid-layout": "^2.2.2"
  },
  "build": {
    "appId": "com.mymemory.app",
    "productName": "My Memory",
    "directories": {
      "output": "release"
    },
    "afterSign": "scripts/notarize.js",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSAppleEventsUsageDescription": "My Memory needs access to Apple Notes to fetch and search your notes."
      }
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "asarUnpack": [
      "**/*.node"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "${env.GITHUB_OWNER}",
        "repo": "${env.GITHUB_REPO}",
        "releaseType": "release"
      }
    ],
    "files": [
      "dist/**/*",
      "!**/.env",
      "!dist/mac-*",
      "!dist/*.dmg",
      "!dist/*.blockmap",
      "!dist/builder-*.yml",
      "!dist/builder-*.yaml",
      "!dist/latest-mac.yml"
    ]
  }
}
