{
  "name": "my-memory",
  "version": "1.0.0",
  "description": "Intelligent Notes Search App",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && node scripts/copy-renderer-assets.js",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^17.2.3"
  },
  "build": {
    "appId": "com.mymemory.app",
    "productName": "My Memory",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "extendInfo": {
        "NSAppleEventsUsageDescription": "My Memory needs access to Apple Notes to fetch and search your notes."
      }
    },
    "asarUnpack": [
      "**/*.node"
    ],
    "files": [
      "dist/**/*",
      ".env",
      "!dist/mac-*",
      "!dist/*.dmg",
      "!dist/*.blockmap",
      "!dist/builder-*.yml",
      "!dist/builder-*.yaml",
      "!dist/latest-mac.yml"
    ]
  }
}
